{
  "name": "monitor-max",
  "displayName": "Monitor max",
  "description": "Advanced system monitoring with GPU support for Ubuntu - Enhanced version of Monitor max.",
  "publisher": "your-publisher-name",
  "keywords": [
    "performance",
    "resource",
    "resources",
    "monitor",
    "memory",
    "cpu",
    "gpu",
    "nvidia",
    "ubuntu",
    "linux",
    "io",
    "network",
    "disk",
    "storage",
    "system-monitor"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/vscode-monitor-max"
  },
  "icon": "assets/icon.png",
  "version": "1.0.0",
  "engines": {
    "vscode": "^1.101.2"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "scripts": {
    "vscode:prepublish": "run-s package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "run-s build:i18n && webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "run-s compile-tests && run-s compile && run-s lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "build:i18n": "node scripts/build-i18n.js"
  },
  "devDependencies": {
    "@types/mocha": "10.0.10",
    "@types/node": "18.19.115",
    "@types/vscode": "1.101.0",
    "@typescript-eslint/eslint-plugin": "6.21.0",
    "@typescript-eslint/parser": "6.21.0",
    "@vscode/test-electron": "2.5.2",
    "eslint": "8.57.1",
    "glob": "10.4.5",
    "mocha": "10.8.2",
    "npm-run-all2": "5.0.2",
    "sharp": "^0.34.2",
    "svg2img": "^1.0.0-beta.2",
    "ts-loader": "9.5.2",
    "typescript": "5.8.3",
    "webpack": "5.99.9",
    "webpack-cli": "5.1.4"
  },
  "dependencies": {
    "systeminformation": "5.27.7"
  },
  "contributes": {
    "configuration": {
      "title": "Monitor Max",
      "properties": {
        "monitor-max.metrics": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": [
              "cpu",
              "memoryActive",
              "memoryUsed",
              "network",
              "fileSystem",
              "battery",
              "cpuTemp",
              "cpuSpeed",
              "osDistro",
              "diskSpace",
              "uptime",
              "gpuUtilization",
              "gpuMemory",
              "gpuTemperature"
            ]
          },
          "default": [
            "cpu",
            "memoryActive",
            "memoryUsed",
            "network",
            "fileSystem",
            "battery",
            "cpuTemp",
            "cpuSpeed",
            "osDistro",
            "diskSpace",
            "uptime",
            "gpuUtilization",
            "gpuMemory",
            "gpuTemperature"
          ],
          "description": "%config.metrics%"
        },
        "monitor-max.refresh-interval": {
          "type": "number",
          "default": 250,
          "description": "%config.refresh-interval%"
        },
        "monitor-max.diskSpace": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "all",
            "C:"
          ],
          "description": "%config.diskSpace%"
        },
        "monitor-max.gpuIndex": {
          "type": "number",
          "default": 0,
          "description": "%config.gpuIndex%"
        },
        "monitor-max.gpuEnabled": {
          "type": "boolean",
          "default": true,
          "description": "%config.gpuEnabled%"
        },
        "monitor-max.gpuAutoDetect": {
          "type": "boolean",
          "default": true,
          "description": "%config.gpuAutoDetect%"
        }
      }
    }
  }
}